 <div class="container">
    <div class="col-xs-3">
      <h2>マイページ編集</h2>
      <h3>登録情報</h3>
      <%= form_with model: @user, local:true do |f| %>
        <table class="table table-bordered">
          <%= f.label :name %><br>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %><br><br>
          <%= f.label :email %><br>
          <%= f.text_field :email, autofocus: true, autocomplete: "email" %><br><br>
          <%= f.submit '変更完了', class: "btn btn-primary" %>
        </table>
      <% end %>
    </div>
  </div>