<p class="is-size-4 md-3">レビューを書く</p>

  <% if review.errors.any? %>
    <div class="notification is-danger">
      <h2><%= review.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="rating-box mt-3">
    <%= form_with model: review, url: fishing_park_reviews_path(fishing_park), local: true do |f| %>
      <div class="main-rating">
        <div class="ratings md-3">
          <!--星をつけ0~5個で評価する-->
          <span class="fa fa-star-o" id="star"></span>
          <span class="fa fa-star-o" id="star"></span>
          <span class="fa fa-star-o" id="star"></span>
          <span class="fa fa-star-o" id="star"></span>
          <span class="fa fa-star-o" id="star"></span>
        </div>
          <!--星が5個あるためわかりやすく表示-->
        <div class="ml-3 rating-value-display"><span id="rating-value-display">0</span>/5</div>
        </div>
        <!--どの海釣り公園に結び付けられているレビューかを記述-->
        <%= f.hidden_field :fishing_park_id, value: fishing_park.id %>
        <%= f.hidden_field :score, id: "rating-value" %>
        <%= f.text_field :content, class: "textarea" %>
        <p><%= f.submit "保存", class: "button mt-3" %>
        <!--<p><%= link_to "他のレビューを見る", fishing_park_reviews_path(fishing_park), class: "button light ml-3 mt-3" %>-->
      </div>
    <% end %>

  </div>

  <% @reviews.each do |review| %>
  <table>
    
    <tr>
      <th>評価</th>
      <th><%= review.score %></th>
      <th>内容</th>
      <th><%= review.content %></th>
    </tr>
    <%= link_to "削除", fishing_park_review_path(review), method: :delete, "data-confirm" => "削除しますか？" %>
  </table>
  <% end %>



<%= javascript_include_tag 'reviews.js' %>