  <div class="container"><br><br><br><br>
    <h1>海釣り公園一覧</h1><br><br>
    <div>
      <% @fishing_parks.each do |fishing_park| %>
        <div class="row">
          <%= link_to fishing_park_path(fishing_park.id) do %>
            <div class="col-md-3">
              <%= attachment_image_tag fishing_park, :image, size:'180x180' %>
            </div>
            <div class="col-md-6">
              <div style="height: 30px;">
                <p><h4>名称 ： <%= fishing_park.name %></p></h4>
              </div>
              <div style="height: 30px;">
                <p><h4>住所 ： <%= fishing_park.address %></p></h4>
              </div>
              <div style="height: 30px;">
                <h4>料金</h4>
                <p><h4><%= fishing_park.fee %></p></h4>
              </div>
              <div style="height: 50px;"><br>
                <p><h4><%= fishing_park.children_fee %></p></h4>
              </div>
            </div>
            <div class="col-md-3">
              <div style="height: 40px;">
                <h4>入園料(見学の人)</h4>
                <p><h4><%= fishing_park.tour_fee %></p></h4>
                <p><h4><%= fishing_park.children_tour_fee %></p></h4>
              </div>
              <% end %>
              <% if user_signed_in? %>
                <% if current_user.admin? %><br><br><br><br><br>
                  <%= link_to "編集", edit_fishing_park_path(fishing_park.id) %>
                  <%= link_to "削除する", fishing_park_path(fishing_park.id), method: :delete, "data-confirm" => "削除しますか？" %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
        <hr>
      <% end %>
    </div>
  </div>
  <div class="container"><br>
    <% if user_signed_in? %>
      <% if current_user.admin? %>
        <%= form_with model: @fishing_park, local:true do |f| %>
          <label>image</label><br>
            <p><%= f.attachment_field :image %></p>
          <label>address</label>
            <p><%= f.text_field :address %></p>
          <label>name</label>
            <p><%= f.text_field :name %></p>
           <label>fee</label>
            <p><%= f.text_field :fee %></p>
          <label>children_fee</label>
            <p><%= f.text_field :children_fee %></p>
          <label>tour_fee</label>
            <p><%= f.text_field :tour_fee %></p>
          <label>children_tour_fee</label>
            <p><%= f.text_field :children_tour_fee %></p>
          <%= f.submit 'Create' %>
        <% end %>
     <% end %>
    <% end %>
  </div>
